@model List<EjemploCRUD.Models.ListaUsuarioViewModel>

@{
    ViewBag.Title = "Lista de usuarios";
}

<h2>@ViewBag.Title</h2>

<div class="row" style="text-align:right; padding:5px">
    <a href="~/Usuario/Nuevo" class="btn btn-primary">Nuevo</a>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table table-striped">
            <tr>
                <th>#</th>
                <th>Nombre</th>
                <th>Correo</th>
                <th>Acciones</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Nombre</td>
                    <td>@item.Correo</td>
                    <td>
                        <a class="btn btn-default" href="~/Usuario/Editar/@item.Id">Editar</a>
                        <a class="btn btn-danger" href="~/Usuario/Eliminar/@item.Id">Eliminar</a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>


